<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ac_main"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/buttonPolo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login UI" />

        <Button
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/buttonWebView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Web View" />

        <Button
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/buttonScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Scanner fragment" />

        <Button
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/buttonFragments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fragments Communication" />

        <Button
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/buttonStkPush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mpesa STK Push" />

        <Button
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/buttonBinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Binary" />

        <Button
            android:layout_column="0"
            android:layout_row="3"
            android:id="@+id/button_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Recycler View" />

        <Button
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/buttonSharedPreference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Shared Preference" />

        <Button
            android:layout_column="0"
            android:layout_row="4"
            android:id="@+id/buttonConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check Internet" />

        <Button
            android:layout_column="1"
            android:layout_row="4"
            android:id="@+id/buttonPesaPal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PESAPAL" />

        <Button
            android:layout_column="0"
            android:layout_row="5"
            android:id="@+id/buttonRecorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sound recorder" />

        <Button
            android:layout_column="1"
            android:layout_row="5"
            android:id="@+id/buttonService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Android Service" />

        <Button
            android:layout_column="0"
            android:layout_row="6"
            android:id="@+id/buttonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Theme" />

        <Button
            android:id="@+id/buttonMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_row="6"
            android:layout_column="1"
            android:text="Maps" />

        <Button
            android:id="@+id/buttonDownloadPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download PDF"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="360dp" />

        <Button
            android:id="@+id/buttonContextMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_gravity="center"
            android:text="Fancy Context Menu" />

        <Button
            android:id="@+id/buttonLightProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="Light progress bar" />

        <Button
            android:id="@+id/buttonToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_gravity="center"
            android:layout_column="1"
            android:text="Toast" />
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout>